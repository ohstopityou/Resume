<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="css/main.css">
    <script defer src="../js/main.js"></script>
    <!-- <link rel="stylesheet" href="../css/main.css">
    <link rel="stylesheet" href="../public/css/main.css"> -->
    <title>Resume Builder</title>
</head>
<body>
  <header>
    <h1>Resume Builder</h1>
    <a href="/logout">Log Out</a>
  </header>
  <main>
    <section id="editor">
      <div class="inner">
        <form autocomplete="off" id="resumeForm">
        <h2>Personal Info</h2>
        <div>
          <label>Name<input name="name" value="<%= resume.name %>"></label>
          <label>Picture URL<input name="picture" value="<%= resume.picture %>"></label>
          <label>Title<input name="title" value="<%= resume.worktitle %>"></label>
          <label>Email<input name="email" type="email" value="<%= resume.email %>"></label>
          <label>Phone<input name="phone" type="tel" value="<%= resume.phone %>"></label>
          <label>Address<input name="address" value="<%= resume.address %>"></label>
          <label>City<input name="city" value="<%= resume.city %>"></label>
          <label>Post code<input name="postcode" value="<%= resume.postcode %>"></label>
          <label>Summary<textarea name="summary" rows="8"><%= resume.summary %></textarea></label>
        </div>
        
        <h2>Experience</h2>
        <% experiences.forEach(function(exp) { %>
          <div>
            <label>Title<input name="exp-title" value="<%= exp.title %>"></label>
            <label>Location<input name="exp-location" value="<%= exp.location %>"></label>
            <label>From<input name="exp-from" value="<%= exp.from %>"></label>
            <label>To<input name="exp-to" value="<%= exp.to %>"></label>
            <label>Summary<textarea name="exp-summary" rows="8"><%= exp.summary %></textarea></label>
          </div>
        <% }); %>

        <button>Save</button>
        </form>
      </div>

    </section>
    <section id="preview">
      <div id="preview-inner">
        <!-- <iframe id="resumeIframe" src="/resume" class="paper"></iframe>  -->
      </div>
      <button id="refreshResume">Refresh resume</button>
      <button id="toggleEditor">Toggle editor</button>
    </section>
  </main>
</body>
</html>